    "import numpy as np  \n",
    "import matplotlib.pyplot as plt\n",
    "\n",
    "def calculate_histogram(image):  \n",
    "\"\"\"Verilen görüntünün histogramını hesaplar.\"\"\"  \n",
    "hist, \\_ = np.histogram(image.flatten(), bins=256, range=\\[0, 256\\])\n",
    "return hist\n",
    "\n",
    "def calculate_cdf(hist):  \n",
    "\"\"\"Histogramdan kumulatif dağılım fonksiyonunu (CDF) hesaplar.\"\"\" cdf =\n",
    "hist.cumsum()  \n",
    "cdf_normalized = cdf \\* hist.max() / cdf.max()  \n",
    "return cdf_normalized\n",
    "\n",
    "def print_table(table, title, col1_name, col2_name): \"\"\"Tabloyu ekrana\n",
